<%= render 'list', book: @book, user: @user %>

<h2>Books detail</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag @book.user.get_profile_image("100x100") %></td>
      <td>
        <%= link_to book_path(@book.id) do %>
          <%= @book.title %>
        <% end %>
      </td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
